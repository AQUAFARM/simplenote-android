<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="SimplenoteTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF464646</item>
    </style>

    <style name="UntitledNoteAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/notePreviewColor</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- welcome buttons -->
    <style name="SimplenoteButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/welcome_button_selector</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>