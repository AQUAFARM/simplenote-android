<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/listBackgroundSelector"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_small"
    android:paddingLeft="@dimen/padding_large"
    android:paddingRight="@dimen/padding_large"
    android:paddingTop="@dimen/padding_small">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/note_pin"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_item_list_default_pin_active"
            android:tint="?attr/notePinColor" />

        <com.automattic.simplenote.widgets.RobotoMediumTextView
            android:id="@+id/note_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:textColor="?attr/noteTitleColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="Note Title" />

    </LinearLayout>

    <com.automattic.simplenote.widgets.RobotoRegularTextView
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?attr/notePreviewColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="Note content" />

</LinearLayout>