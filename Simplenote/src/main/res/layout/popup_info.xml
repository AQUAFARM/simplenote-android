<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/simplenote_blue"
    android:orientation="vertical"
    android:padding="16dp">

    <com.automattic.simplenote.widgets.RobotoRegularTextView
        android:id="@+id/word_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="40,560 Words" />

    <ViewSwitcher
        android:id="@+id/publish_view_switcher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inAnimation="@anim/quick_fade_in"
        android:outAnimation="@anim/quick_fade_out">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/publish_note_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/welcome_button_selector"
                android:paddingLeft="@dimen/padding_large"
                android:paddingStart="@dimen/padding_large"
                android:paddingRight="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_large"
                android:divider="@drawable/vertical_divider_blue"
                android:orientation="horizontal"
                android:showDividers="middle">

                <com.automattic.simplenote.widgets.RobotoRegularTextView
                    android:id="@+id/publish_note_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_small"
                    android:paddingEnd="@dimen/padding_small"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="@string/publish" />

                <ImageView
                    android:id="@+id/publish_note_button_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/padding_extra_small"
                    android:layout_marginRight="@dimen/padding_extra_small"
                    android:src="@drawable/ic_action_remove" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/publish_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.automattic.simplenote.widgets.RobotoRegularTextView
                    android:id="@+id/publish_url_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selectable_background_simplestyle"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    tools:text="http://simp.ly/blah123" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/publish_copy_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/selectable_background_simplestyle"
                        android:contentDescription="@string/content_description_copy_button"
                        android:src="@drawable/ic_content_copy_white_24dp" />

                    <ImageButton
                        android:id="@+id/publish_share_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/selectable_background_simplestyle"
                        android:contentDescription="@string/content_description_copy_button"
                        android:src="@drawable/ic_share_white_24dp" />

                </LinearLayout>

            </LinearLayout>

            <com.automattic.simplenote.widgets.RobotoRegularTextView
                android:id="@+id/history_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/padding_small"
                android:padding="@dimen/padding_small"
                android:drawableLeft="@drawable/ic_av_timer_white_18dp"
                android:drawableStart="@drawable/ic_av_timer_white_18dp"
                android:drawablePadding="@dimen/padding_extra_small"
                android:background="@drawable/selectable_background_simplestyle"
                android:text="@string/history" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                style="@android:style/Widget.Holo.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ViewSwitcher>
</LinearLayout>