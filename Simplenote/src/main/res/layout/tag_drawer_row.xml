<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tags_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_extra_small"
        android:paddingBottom="@dimen/padding_extra_small"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:visibility="gone">

        <com.automattic.simplenote.widgets.SourceSansTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tags"
            android:textSize="15sp"
            android:textColor="?attr/notePreviewColor" />

        <com.automattic.simplenote.widgets.SourceSansTextView
            android:id="@+id/edit_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:clickable="true"
            android:textSize="15sp"
            android:textColor="@color/simplenote_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/tagListBackgroundSelector"
        android:gravity="center_vertical"
        android:minHeight="@dimen/nav_row_height"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large">

        <ImageView
            android:id="@+id/drawer_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="36dp"
            android:visibility="gone" />

        <com.automattic.simplenote.widgets.SourceSansTextView
            android:id="@+id/tag_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="?attr/noteTitleColor" />
    </LinearLayout>

    <View
        android:id="@+id/section_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_small"
        android:background="?attr/dividerColor"
        android:visibility="gone" />

</LinearLayout>