<?xml version="1.0" encoding="UTF-8"?>
<project name="module_simplenote-android" default="compile.module.simplenote-android">
  <dirname property="module.simplenote-android.basedir" file="${ant.file.module_simplenote-android}"/>
  
  <property name="module.jdk.home.simplenote-android" value="${jdk.home.android_4.2.2}"/>
  <property name="module.jdk.bin.simplenote-android" value="${jdk.bin.android_4.2.2}"/>
  <property name="module.jdk.classpath.simplenote-android" value="jdk.classpath.android_4.2.2"/>
  
  <property name="compiler.args.simplenote-android" value="${compiler.args}"/>
  
  <property name="simplenote-android.output.dir" value="${module.simplenote-android.basedir}/../WordPress-Android/out/production/simplenote-android"/>
  <property name="simplenote-android.testoutput.dir" value="${module.simplenote-android.basedir}/../WordPress-Android/out/test/simplenote-android"/>
  
  <path id="simplenote-android.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="simplenote-android.module.production.classpath">
    <path refid="${module.jdk.classpath.simplenote-android}"/>
    <pathelement location="${simperium-android.output.dir}"/>
    <pathelement location="${actionbarsherlock.output.dir}"/>
    <pathelement location="${basedir}/libs/android-support-v4.jar"/>
  </path>
  
  <path id="simplenote-android.runtime.production.module.classpath">
    <pathelement location="${simplenote-android.output.dir}"/>
    <path refid="simperium-android.runtime.production.module.classpath"/>
    <path refid="actionbarsherlock.runtime.production.module.classpath"/>
    <pathelement location="${basedir}/libs/android-support-v4.jar"/>
  </path>
  
  <path id="simplenote-android.module.classpath">
    <path refid="${module.jdk.classpath.simplenote-android}"/>
    <pathelement location="${simplenote-android.output.dir}"/>
    <pathelement location="${simperium-android.testoutput.dir}"/>
    <pathelement location="${simperium-android.output.dir}"/>
    <pathelement location="${actionbarsherlock.testoutput.dir}"/>
    <pathelement location="${actionbarsherlock.output.dir}"/>
    <pathelement location="${basedir}/libs/android-support-v4.jar"/>
  </path>
  
  <path id="simplenote-android.runtime.module.classpath">
    <pathelement location="${simplenote-android.testoutput.dir}"/>
    <pathelement location="${simplenote-android.output.dir}"/>
    <path refid="simperium-android.runtime.module.classpath"/>
    <path refid="actionbarsherlock.runtime.module.classpath"/>
    <pathelement location="${basedir}/libs/android-support-v4.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.simplenote-android">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.simplenote-android">
    <patternset refid="excluded.from.module.simplenote-android"/>
  </patternset>
  
  <path id="simplenote-android.module.sourcepath">
    <dirset dir="${module.simplenote-android.basedir}">
      <include name="gen"/>
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.simplenote-android" depends="compile.module.simplenote-android.production,compile.module.simplenote-android.tests" description="Compile module simplenote-android"/>
  
  <target name="compile.module.simplenote-android.production" depends="register.custom.compilers,compile.module.simperium-android,compile.module.actionbarsherlock" description="Compile module simplenote-android; production classes">
    <mkdir dir="${simplenote-android.output.dir}"/>
    <javac2 destdir="${simplenote-android.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.simplenote-android}/javac">
      <compilerarg line="${compiler.args.simplenote-android}"/>
      <bootclasspath refid="simplenote-android.module.bootclasspath"/>
      <classpath refid="simplenote-android.module.production.classpath"/>
      <src refid="simplenote-android.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.simplenote-android"/>
    </javac2>
    
    <copy todir="${simplenote-android.output.dir}">
      <fileset dir="${module.simplenote-android.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.simplenote-android.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.simplenote-android.tests" depends="register.custom.compilers,compile.module.simplenote-android.production" description="compile module simplenote-android; test classes" unless="skip.tests"/>
  
  <target name="clean.module.simplenote-android" description="cleanup module">
    <delete dir="${simplenote-android.output.dir}"/>
    <delete dir="${simplenote-android.testoutput.dir}"/>
  </target>
</project>